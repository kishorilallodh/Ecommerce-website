<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>User Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen font-sans">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-[250px] bg-[#2c3e50] text-white p-6 flex flex-col">
        <h2 class="text-xl px-4 py-2 rounded-lg mb-6 hover:bg-[#ff3f6c] transition">
          Hi, <%= user.name %>
        </h2>
        <ul class="flex flex-col gap-3">
          <li><a href="/" class="block px-4 py-3 rounded-lg text-base hover:bg-[#ff3f6c]">Home</a></li>
          <li><a href="/cart" class="block px-4 py-3 rounded-lg text-base hover:bg-[#ff3f6c]">Cart</a></li>
          <li><a href="/myOrder" class="block px-4 py-3 rounded-lg text-base hover:bg-[#ff3f6c]">My Orders</a></li>
          <li><a href="/user/wishlist" class="block px-4 py-3 rounded-lg text-base hover:bg-[#ff3f6c]">Wishlist</a></li>
          <li><a href="#" class="block px-4 py-3 rounded-lg text-base hover:bg-[#ff3f6c]">Setting</a></li>
        </ul>
        <a href="/login/logout" class="mt-6">
          <button class="w-full bg-[#ff3f6c] text-white px-4 py-3 rounded-lg hover:opacity-90">
            Logout
          </button>
        </a>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-10 bg-white">
        <h1 class="text-2xl font-semibold text-gray-800 mb-8">Your Profile</h1>

        <!-- Profile Info -->
        <div id="profileInfo"
             class="bg-gray-100 p-8 rounded-xl shadow-md max-w-5xl mb-10">
          <div class="flex flex-wrap justify-between gap-6 mb-10">
            <div class="flex-1 min-w-[250px] bg-white p-5 rounded-lg shadow-sm">
              <p class="text-gray-700"><strong>Name:</strong> <%= user.name %></p>
            </div>
            <div class="flex-1 min-w-[250px] bg-white p-5 rounded-lg shadow-sm">
              <p class="text-gray-700"><strong>Email:</strong> <%= user.email %></p>
            </div>
          </div>
          <div class="flex flex-wrap justify-between gap-6">
            <div class="flex-1 min-w-[250px] bg-white p-5 rounded-lg shadow-sm">
              <p class="text-gray-700"><strong>Mobile:</strong> <%= user.mobile %></p>
            </div>
            <div class="flex-1 min-w-[250px] bg-white p-5 rounded-lg shadow-sm">
              <p class="text-gray-700"><strong>Gender:</strong> <%= user.gender %></p>
            </div>
          </div>
          <div class="mt-8">
            <button id="editBtn" class="bg-[#ff3f6c] text-white px-6 py-3 rounded-lg hover:bg-[#e7335c]">
              Edit Profile
            </button>
          </div>
        </div>

        <!-- Edit Form -->
        <div id="editForm" class="bg-gray-100 p-8 rounded-xl shadow-md max-w-5xl hidden">
          <h2 class="text-xl font-semibold text-gray-800 mb-6">Edit Your Profile</h2>
          <form action="/updateProfile" method="POST">
            <div class="flex flex-wrap justify-between gap-6 mb-8">
              <div class="flex-1 min-w-[250px]">
                <label class="block text-gray-700 mb-2">Name:</label>
                <input type="text" name="name" value="<%= user.name %>" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-md" />
              </div>
              <div class="flex-1 min-w-[250px]">
                <label class="block text-gray-700 mb-2">Email:</label>
                <input type="email" name="email" value="<%= user.email %>" readonly
                       class="w-full px-4 py-2 border border-gray-300 rounded-md bg-gray-100" />
              </div>
            </div>

            <div class="flex flex-wrap justify-between gap-6 mb-8">
              <div class="flex-1 min-w-[250px]">
                <label class="block text-gray-700 mb-2">Mobile:</label>
                <input type="text" name="mobile" value="<%= user.mobile %>" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-md" />
              </div>
              <div class="flex-1 min-w-[250px]">
                <label class="block text-gray-700 mb-2">Gender:</label>
                <select name="gender" class="w-full px-4 py-2 border border-gray-300 rounded-md">
                  <option value="Male" <%= user.gender === 'Male' ? 'selected' : '' %>>Male</option>
                  <option value="Female" <%= user.gender === 'Female' ? 'selected' : '' %>>Female</option>
                  <option value="Other" <%= user.gender === 'Other' ? 'selected' : '' %>>Other</option>
                </select>
              </div>
            </div>

            <div>
              <button type="submit"
                      class="bg-[#ff3f6c] text-white px-6 py-3 rounded-lg hover:bg-[#e7335c]">
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>

    <script>
      const editBtn = document.getElementById("editBtn");
      const profileInfo = document.getElementById("profileInfo");
      const editForm = document.getElementById("editForm");

      editBtn.addEventListener("click", () => {
        profileInfo.classList.add("hidden");
        editForm.classList.remove("hidden");
      });
    </script>
  </body>
</html>
