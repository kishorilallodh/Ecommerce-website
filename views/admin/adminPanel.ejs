<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Panel</title>
  <style>
  *{
     margin: 0;
     padding: 0;
     box-sizing: border-box;
  }
  
   html,body{
      width: 100%;
      height: 100%;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f6f9;
  }

    .user-panel-container {
      display: flex;
      min-height: 100vh;
    }

    .user-sidebar {
      width: 250px;
      background-color: #2c3e50;
      color: #fff;
      padding: 30px 20px;
      display: flex;
      flex-direction: column;
    }

    .user-sidebar h2 {
      margin-bottom: 30px;
      font-size: 22px;
      color: #ecf0f1;
      padding: 10px 16px;
      border-radius: 8px;
      transition: background 0.3s ease;
    }

    .user-sidebar h2:hover {
      background: #ff3f6c;
    }

    .user-sidebar ul {
      list-style: none;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .user-sidebar ul li a {
      display: block;
      padding: 12px 16px;
      border-radius: 8px;
      font-size: 16px;
      color: #ecf0f1;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    .user-sidebar ul li a:hover {
      background-color: #ff3f6c;
    }

    .user-main-content {
      flex: 1;
      padding: 40px;
      background-color: #fff;
    }

    .user-logout-wrapper {
      text-decoration: none;
      margin-top: auto;
    }

    .user-logout-button {
      display: block;
      padding: 12px 16px;
      border-radius: 8px;
      font-size: 16px;
      color: white;
      background-color: #ff3f6c;
      border: none;
      cursor: pointer;
    }

    h1, h2 {
      font-size: 28px;
      margin-bottom: 30px;
      color: #333;
    }

  

    .info-row {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-bottom: 40px;
      gap: 40px;
    }

    .info-item {
      flex: 1 1 28%;
      background-color: #fff;
      padding: 15px 20px;
      border-radius: 10px;
      border: 1px solid #ccc;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      text-align: center;
    }

    .info-item label {
      font-size: 18px;
      color: #888;
    }

    .info-item p {
      font-size: 24px;
      font-weight: bold;
      color: #2c3e50;
      margin-top: 10px;
    }

    

    @media screen and (max-width: 768px) {
      .user-panel-container {
        flex-direction: column;
      }

      .user-sidebar {
        width: 100%;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 10px;
      }

      .user-main-content {
        padding: 20px;
      }

      .info-item {
        flex: 1 1 100%;
      }
    }
  </style>
</head>
<body>
  <div class="user-panel-container">
    <!-- Sidebar -->
    <aside class="user-sidebar">
      <h2>Hi, Admin</h2>
      <ul>
        <li><a href="#">Dashboard</a></li>
         <li><a href="/addproduct">Add Products</a></li>
        <li><a href="/adminProduct">Manage Products</a></li>
        <li><a href="/admin/orders">Manage Orders</a></li>
        <li><a href="/admin/users">Manage Users</a></li>
        <li><a href="/admin/categories">Categories</a></li>
        <li><a href="/admin/settings">Settings</a></li>
      </ul>
      <a href="/login/logout" class="user-logout-wrapper">
        <button class="user-logout-button">Logout</button>
      </a>
    </aside>

    <!-- Main Content -->
    <main class="user-main-content">
      <h1>Welcome to Admin Dashboard</h1>

      <div class="user-info-card">
        <div class="info-row">
          <div class="info-item">
            <label>Total Products</label>
            <p><%= totalProducts %></p>
          </div>
          <div class="info-item">
            <label>Total Orders</label>
            <p><%= totalOrders %></p>
          </div>
          <div class="info-item">
            <label>Total Users</label>
            <p><%= totalUsers %></p>
          </div>
        </div>
       
      </div>
    </main>
  </div>
</body>
</html>
