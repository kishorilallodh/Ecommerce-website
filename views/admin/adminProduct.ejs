<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Manage Products - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 p-5 font-sans">
    <div class="max-w-7xl mx-auto bg-white p-8 rounded-xl shadow-md">
      <h1 class="text-2xl font-semibold text-gray-800 mb-6">Manage Products</h1>

      <a href="/admin/products/add"
         class="inline-block bg-[#ff3f6c] text-white px-5 py-3 rounded-md mb-6 hover:bg-[#e6335c] transition">
        + Add New Product
      </a>

      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-[#2c3e50] text-white">
              <th class="p-4">Product Image</th>
              <th class="p-4">Product</th>
              <th class="p-4">Price</th>
              <th class="p-4">Category</th>
              <th class="p-4">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((product) => { %>
              <tr class="border-b hover:bg-gray-50">
                <td class="p-4">
                  <img src="/<%= product.pimage %>" alt="<%= product.pname %>" class="w-24 rounded-md"/>
                </td>
                <td class="p-4 text-gray-800 font-medium"><%= product.pname %></td>
                <td class="p-4 text-gray-700">â‚¹<%= product.pprice %></td>
                <td class="p-4 text-gray-700"><%= product.pcategory %></td>
                <td class="p-4">
                  <a href="/admin/products/edit/<%= product._id %>"
                     class="inline-block bg-blue-500 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-600 transition">
                    Edit
                  </a>
                  <a href="/admin/products/delete/<%= product._id %>"
                     class="inline-block bg-red-500 text-white px-4 py-2 rounded-md text-sm hover:bg-red-600 transition ml-2">
                    Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
