<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body class="bg-gray-100">
    <%- include('../includes/navbar.ejs') %>
    <div class="flex flex-col lg:flex-row gap-6 max-w-6xl mx-auto my-6 px-4">
      <!-- Cart List -->
      <div class="flex-1 bg-white rounded-lg shadow p-6">
        <h2 class="text-2xl font-semibold mb-4">üõí Your Shopping Cart</h2>
        <% let total = 0; let discount ; %>
        <% if (cartdata && cartdata.product.length > 0) { %>
          <%cartdata.product.forEach((key) => { %>
            <% if (key.productid) { let productTotal = key.productid.pprice * key.quantity; total += productTotal; discount = (total * key.productid.pdisct) / 100 %>
            <div class="flex flex-col md:flex-row gap-4 border-b border-gray-200 py-4">
              <div class="w-36 h-36 flex-shrink-0">
                <img src="/<%= key.productid.pimage %>" alt="Product Image" class="object-contain w-full h-full rounded-md" />
              </div>
              <div class="flex-1 flex justify-between">
                <div>
                  <h3 class="text-lg font-semibold"><%= key.productid.pname %></h3>
                  <p class="text-sm text-gray-500">Brand: <%= key.productid.pbname %></p>
                  <div class="text-sm mt-2">
                    <span class="text-pink-600 font-semibold mr-4">‚Çπ<%= key.productid.pprice %></span>
                    <span class="text-green-600"><%= key.productid.pdisct %>% OFF</span>
                  </div>
                  <div class="flex items-center gap-3 mt-3">
                    <a href="/cart/increase/<%= key.productid._id %>"><button class="px-3 py-1 border rounded-full">+</button></a>
                    <span class="px-4 py-1 border"><%= key.quantity %></span>
                    <a href="/cart/decrease/<%= key.productid._id %>"><button class="px-3 py-1 border rounded-full">-</button></a>
                  </div>
                </div>
                <div class="flex items-start">
                  <form action="/deleteCartproduct/<%= key.productid._id %>" method="POST">
                    <button type="submit" class="text-gray-500 hover:text-red-600">
                      <i class="fa-solid fa-trash text-xl"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% } %> <% }) %>
        <% } else { %>
          <div class="p-6 text-lg">üõçÔ∏è Your cart is empty</div>
        <% } %>
      </div>

      <!-- Price Box -->
      <div class="w-full lg:w-[320px] bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold border-b pb-2 mb-4">PRICE DETAILS</h3>
        <div class="flex justify-between text-sm mb-2">
          <span>Price (<%= cartdata.product.length %> items)</span>
          <span>‚Çπ<%= total %></span>
        </div>
        <div class="flex justify-between text-sm mb-2">
          <span>Discount</span>
          <span class="text-green-600">‚àí ‚Çπ<%= discount %></span>
        </div>
        <div class="flex justify-between text-sm mb-2">
          <span>Delivery Charges</span>
          <span class="text-green-600">Free</span>
        </div>
        <div class="flex justify-between font-semibold text-base border-t pt-2 mt-3">
          <span>Total Amount</span>
          <span>‚Çπ<%= total - discount %></span>
        </div>
        <p class="text-green-600 text-sm mt-2">You will save ‚Çπ<%= discount %> on this order</p>
        <p class="text-gray-600 text-sm mt-4 flex items-start gap-2">
          <i class="fa-solid fa-square-check text-green-600 text-lg"></i>
          Safe and Secure Payments. Easy returns. 100% Authentic products.
        </p>
        <form id="paymentForm" class="mt-5">
          <input type="hidden" id="totalAmount" value="<%= total - discount %>" />
          <button type="button" id="rzp-button" class="w-full bg-[#ff3f6c] text-white py-2 rounded hover:bg-[#ff3f6c]">Place Order</button>
        </form>
      </div>
    </div>

    <%- include('../includes/footer.ejs') %>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
      document.getElementById("rzp-button").onclick = async function (e) {
        e.preventDefault();
        const amount = document.getElementById("totalAmount").value;

        try {
          const res = await fetch("/createOrder", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ totalAmount: amount })
          });

          if (!res.ok) {
            const error = await res.json();
            alert("Server Error: " + error.error);
            return;
          }

          const order = await res.json();

          const options = {
            key: "rzp_test_q58snxSC17DiYZ",
            amount: order.amount,
            currency: order.currency,
            order_id: order.id,
            handler: async function (response) {
              const res = await fetch("/saveOrder", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                  razorpay_order_id: response.razorpay_order_id,
                  razorpay_payment_id: response.razorpay_payment_id,
                  totalAmount: amount
                })
              });

              const data = await res.json();
              alert(data.message || "Payment Success!");
            },
            theme: { color: "#3399cc" }
          };

          const rzp = new Razorpay(options);
          rzp.open();

        } catch (error) {
          console.error("Payment error:", error);
          alert("Failed to initiate payment.");
        }
      };
    </script>
  </body>
</html>
