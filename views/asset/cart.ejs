<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Cart</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      .main-wrapper {
        display: flex;
        gap: 20px;
        max-width: 1200px;
        margin: auto;
        margin-top: 20px;
        margin-bottom: 20px;
        
      }

      .cart-container {
        flex: 2;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        padding: 20px;
      }

      .cart-item {
        display: flex;
        gap: 20px;
        border-bottom: 1px solid #e0e0e0;
        padding: 20px 0;
      }

      .item-image img {
        width: 140px;
        height: 140px;
        object-fit: contain;
        border-radius: 8px;
      }

      .item-details {
        flex-grow: 1;
        display: flex;
        justify-content: space-between;
        padding-right: 10px;
      }

      .item-name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
      }

      .item-meta {
        font-size: 14px;
        color: #555;
      }

      .out-of-stock {
        color: red;
        font-weight: bold;
        margin: 10px 0;
      }

      .actions {
        margin-top: 10px;
      }

      .cart-card-price {
        color: #e91e63;
        cursor: pointer;
        margin-right: 15px;
        font-size: 14px;
        font-weight: bold;
      }
      .cart-card-discount {
        color: #28a745;
        cursor: pointer;
        margin-right: 15px;
        font-size: 14px;
      }

      .cart-item-quantity {
        display: flex;
        gap: 10px;
        margin-top: 15px;
      }

      .cart-item-quantity button {
        padding: 5px 12px;
        border: 1px solid #ccc;
        background-color: white;
        border-radius: 20px;
        cursor: pointer;
      }
      .cart-item-quantity span {
        padding: 2px 15px;
        border: 1px solid #ccc;
      }

      .cart-remove-item {
        margin-top: 5px;
      }
      .cart-remove-item i {
      color: #aca0a0;
      }
      .cart-remove-item button{
         padding: 7px 10px;
        border-radius: 50%;
        border: 1px solid #ccc;
        font-size: 17px;
        background-color: white;
        cursor: pointer;
      }

      .price-box {
        flex: 1;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        padding: 20px;
        height: fit-content;
        /* position: fixed; */
      }

      .price-box h3 {
        margin-bottom: 20px;
        border-bottom: 1px solid #ccc;
        padding-bottom: 10px;
      }

      .price-line {
        display: flex;
        justify-content: space-between;
        margin: 8px 0;
      }

      .total-line {
        font-weight: bold;
        font-size: 18px;
        border-top: 1px solid #ccc;
        padding-top: 10px;
        margin-top: 15px;
      }

      .savings {
        color: #28a745;
        margin-top: 10px;
      }

      .footer-note {
        margin-top: 30px;
        font-size: 14px;
        color: #666;
      }
      .footer-note i {
        color: #28a745;
        font-size: 18px;
      }

      .place-order-btn {
        margin-top: 20px;
        padding: 10px 140px;
        background: #ff3f6c;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
      }
      .place-order-btn:hover {
        background: #ec2e5a;
      }
    </style>
  </head>
  <body>
    <%- include('../includes/navbar.ejs') %>
    <div class="main-wrapper">
      <!-- Cart Product List -->
      <div class="cart-container">
        <h2>üõí Your Shopping Cart</h2>

        <% let total = 0; let discount ; %> 
        <% if (cartdata && cartdata.product.length > 0) { %> 
          <%cartdata.product.forEach((key) => { %> 
          <% if (key.productid) { let productTotal = key.productid.pprice *
        key.quantity; total += productTotal; discount = (total *
        key.productid.pdisct) / 100 %>
        <div class="cart-item">
          <div class="item-image">
            <img src="/<%= key.productid.pimage %>" alt="Product Image" />
          </div>
          <div class="item-details">
            <div>
              <div class="item-name"><%= key.productid.pname %></div>
              <div class="item-meta"><%= key.productid.pbname %></div>
              <div class="actions">
                <span class="cart-card-price"
                  >‚Çπ<%= key.productid.pprice %></span
                >
                <span class="cart-card-discount"
                  ><%= key.productid.pdisct %>% OFF</span
                >
              </div>
              <div class="cart-item-quantity">
                <a href="/cart/increase/<%= key.productid._id %>"
                  ><button>+</button></a
                >
                <span> <%= key.quantity %></span>
                <a href="/cart/decrease/<%= key.productid._id %>"
                  ><button>-</button></a
                >
              </div>
            </div>
            <div class="cart-remove-item">
            <form action="/deleteCartproduct/<%= key.productid._id %>" method="POST">
             <button type="submit"><i class="fa-solid fa-trash"></i></button>
           </form>

            </div>
          </div>
        </div>
        <% } %> <% }) %> <% } else { %>
        <div style="padding: 30px; font-size: 20px">üõçÔ∏è Your cart is empty</div>
        <% } %>
      </div>

      <!-- Price Details Box -->
      <div class="price-box">
        <h3>PRICE DETAILS</h3>
        <div class="price-line">
          <span>Price (<%= cartdata.product.length %> items)</span>
          <span>‚Çπ<%= total %></span>
        </div>
        <div class="price-line">
          <span>Discount</span>
          <span style="color: green">‚àí ‚Çπ<%= discount %></span>
        </div>
        <div class="price-line">
          <span>Delivery Charges</span>
          <span style="color: green">Free</span>
        </div>
        <div class="price-line total-line">
          <span>Total Amount</span>
          <span>‚Çπ<%= total - discount %></span>
        </div>
        <div class="savings">You will save ‚Çπ<%= discount %> on this order</div>
        <div class="footer-note">
          <i class="fa-solid fa-square-check"></i> Safe and Secure Payments.
          Easy returns. 100% Authentic products.
        </div>
       <form id="paymentForm" >
        <input type="hidden" id="totalAmount" value="<%= total - discount %>">
         <button type="button" id="rzp-button" class="place-order-btn">Place Order</button>
       </form>
      </div>
    </div>
    <%- include('../includes/footer.ejs') %>
   <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
 document.getElementById("rzp-button").onclick =async function (e) {
  e.preventDefault();
  const amount = document.getElementById("totalAmount").value;
  

  try {
    const res = await fetch("/createOrder", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ totalAmount: amount }),
    });

    if (!res.ok) {
      const error = await res.json();
      console.error("‚ùå Server error:", error);
      alert("Server Error: " + error.error);
      return;
    }

    const order = await res.json();
    console.log("‚úÖ Order received:", order);

    const options = {
      key: "rzp_test_q58snxSC17DiYZ",
      amount: order.amount,
      currency: order.currency,
      order_id: order.id,
      handler: async function (response) {
        const res = await fetch("/saveOrder", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            razorpay_order_id: response.razorpay_order_id,
            razorpay_payment_id: response.razorpay_payment_id,
            totalAmount: amount
          }),
        });

        const data = await res.json();
        alert(data.message || "Payment Success!");
      },
      theme: {
        color: "#3399cc",
      },
    };

    const rzp = new Razorpay(options);
    rzp.open();
  } catch (error) {
    console.error("‚ùå Payment error:", error);
    alert("Failed to initiate payment.");
  }
};

</script>

  </body>
  
</html>
