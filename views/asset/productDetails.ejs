<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Details</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      .product-detail-container {
        max-width: 900px;
        margin: 50px auto;
        display: flex;
        gap: 30px;
        padding: 20px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
      }
      .product-detail-container img {
        max-width: 350px;
        border-radius: 12px;
        background-position: center;
        background-size: cover;
        height: auto;
      }
      .product-detail-info {
        flex: 1;
      }
      .product-detail-info h2 {
        margin-bottom: 10px;
      }
      .price-section {
        font-size: 20px;
        margin: 15px 0;
        display: flex;
        gap: 20px;
      }
      /* .product-detail-price {
        font-weight: 600;
      } */
      .product-detail-price span {
        color: #e91e63;
        font-weight: bold;
      }
      .product-detail-discount span {
        color: #28a745;
      }
      .product-detail-description {
        text-align: justify;
      }
      .product-action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 20px;
      }
      .product-action-buttons form {
        margin: 0;
      }
      .action-btn {
        display: inline-block;
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 8px;
        color: white;
        border: none;
        cursor: pointer;
      }
      .btn-cart {
        background-color: #28a745;
      }
      .btn-cart:hover {
        background-color: #218838;
      }
      .btn-update {
        background-color: #007bff;
      }
      .btn-update:hover {
        background-color: #0056b3;
      }
      .btn-delete {
        background-color: #dc3545;
      }
      .btn-delete:hover {
        background-color: #c82333;
      }
    </style>
  </head>
  <body>
    <%- include('../includes/navbar.ejs') %>

    <div class="product-detail-container">
      <img src="/<%= product.pimage %>" alt="<%= product.pname %>" />

      <div class="product-detail-info">
        <h2><%= product.pname %></h2>
        <div class="price-section">
          <div class="product-detail-price">
            <span>â‚¹<%= product.pprice %></span>
          </div>
          <div class="product-detail-discount">
            <span><%= product.pdisct %>% OFF</span>
          </div>
        </div>
        <p class="product-detail-description"><%= product.pdesc %></p>

         <!-- All Buttons in Flexbox -->
        <div class="product-action-buttons">
          <!-- Add to Cart -->
          <form action="/cart/<%= product._id %>" method="get">
            <button class="action-btn btn-cart" onclick="alert('Product added to cart!')">
              <i class="fa-solid fa-cart-shopping"></i> Add to Cart
            </button>
          </form>

          <!-- Update Product -->
          <form action="/editproduct/<%= product._id %>" method="get">
            <button class="action-btn btn-update">
              <i class="fa-solid fa-pen-to-square"></i> Update
            </button>
          </form>

          <!-- Delete Product -->
          <form action="/deleteproduct/<%= product._id %>" method="get" onsubmit="return confirm('Are you sure you want to delete this product?');">
            <button class="action-btn btn-delete">
              <i class="fa-solid fa-trash"></i> Delete
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include('../includes/footer.ejs') %>
  </body>
</html>
