<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Orders</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body class="bg-gray-100 text-gray-800">
    <%- include('../includes/navbar.ejs') %>

    <div class="max-w-5xl mx-auto mt-10 px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-semibold mb-6 flex items-center gap-2">ðŸ§¾ My Orders</h2>

      <% if (orders.length === 0) { %>
        <p class="text-center text-gray-600">No orders found.</p>
      <% } else { %>
        <% orders.forEach(order => { %>
          <div class="bg-white shadow-md rounded-lg p-6 mb-8">
            <!-- Order Info -->
            <div class="mb-4 space-y-2 text-sm sm:text-base">
              <p><strong>Order ID:</strong> <%= order.orderId %></p>
              <p><strong>Payment ID:</strong> <%= order.paymentId %></p>
              <p><strong>Date:</strong>
                <%= new Date(order.created).toLocaleString("en-IN", { timeZone: "Asia/Kolkata" }) %>
              </p>
              <p>
                <strong>Status:</strong>
                <span class="inline-block bg-green-100 text-green-700 text-xs font-medium px-2 py-1 rounded">
                  <%= order.status %>
                </span>
              </p>
            </div>

            <!-- Products -->
            <div class="space-y-5">
              <% order.product.forEach(item => { %>
                <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 border-t pt-4">
                  <img
                    src="/<%= item.productId.pimage %>"
                    alt="Product Image"
                    class="w-24 h-24 object-contain border border-gray-300 rounded p-1 bg-white"
                  />
                  <div class="flex-1 text-sm">
                    <p class="font-semibold text-base"><%= item.productId.pname %></p>
                    <p class="text-gray-600">Brand: <%= item.productId.pbname %></p>
                    <p class="text-gray-600">Quantity: <%= item.quantity %></p>
                    <p class="text-pink-600 font-semibold">Price: â‚¹<%= item.productId.pprice %></p>
                  </div>
                </div>
              <% }) %>
            </div>

            <!-- Total -->
            <div class="border-t mt-5 pt-4 text-right font-semibold text-base">
              <p>Total Amount: â‚¹<%= order.amount %></p>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>

    <%- include('../includes/footer.ejs') %>
  </body>
</html>
