<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center px-4 py-8">

  <div class="bg-white w-full max-w-3xl rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Edit Product</h2>

    <form action="/editproduct/<%= product._id %>" method="POST" enctype="multipart/form-data" class="space-y-6">

      <!-- Row 1: Product Name and Brand -->
      <div class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
          <label for="pname" class="block mb-1 font-medium text-gray-700">Product Name</label>
          <input type="text" id="pname" name="pname" value="<%= product.pname %>" placeholder="Enter Product Name" required
            class="w-full px-4 py-2 rounded-md border border-gray-300 bg-gray-50  text-sm"/>
        </div>
        <div class="flex-1">
          <label for="pbname" class="block mb-1 font-medium text-gray-700">Brand Name</label>
          <input type="text" id="pbname" name="pbname" value="<%= product.pbname %>" placeholder="Enter Brand Name" required
            class="w-full px-4 py-2 rounded-md border border-gray-300 bg-gray-50  text-sm"/>
        </div>
      </div>

      <!-- Row 2: Discount and Price -->
      <div class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
          <label for="pdisct" class="block mb-1 font-medium text-gray-700">Discount %</label>
          <input type="text" id="pdisct" name="pdisct" value="<%= product.pdisct %>" placeholder="Enter Discount %" required
            class="w-full px-4 py-2 rounded-md border border-gray-300 bg-gray-50  text-sm"/>
        </div>
        <div class="flex-1">
          <label for="pprice" class="block mb-1 font-medium text-gray-700">Price</label>
          <input type="number" id="pprice" name="pprice" value="<%= product.pprice %>" placeholder="Enter Price" required
            class="w-full px-4 py-2 rounded-md border border-gray-300 bg-gray-50  text-sm"/>
        </div>
      </div>

      <!-- Row 3: Category and Image -->
      <div class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
          <label for="pcategory" class="block mb-1 font-medium text-gray-700">Product Category</label>
          <input type="text" id="pcategory" name="pcategory" value="<%= product.pcategory %>" placeholder="Enter Category" required
            class="w-full px-4 py-2 rounded-md border border-gray-300 bg-gray-50  text-sm"/>
        </div>
        <div class="flex-1">
          <label for="pimage" class="block mb-1 font-medium text-gray-700">Upload Image</label>
          <input type="file" id="pimage" name="pimage"
            class="w-full px-4 py-2 rounded-md border border-gray-300 bg-white file:mr-4 file:py-1 file:px-2 file:rounded-full file:border-0 file:bg-green-100 file:text-green-700 hover:file:bg-green-200 text-sm"/>
        </div>
      </div>

      <!-- Description -->
      <div>
        <label for="pdesc" class="block mb-1 font-medium text-gray-700">Product Description</label>
        <textarea id="pdesc" name="pdesc" placeholder="Enter Description" required
          class="w-full px-4 py-3 rounded-md border border-gray-300 bg-gray-50 text-sm min-h-[120px] resize-y"><%= product.pdesc %></textarea>
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-green-600 text-white font-semibold py-3 rounded-md hover:bg-green-700 transition text-base">
        Update Product
      </button>

    </form>
  </div>
  
</body>
</html>
